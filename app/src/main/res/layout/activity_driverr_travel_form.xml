<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DriverTravelForm">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_location_driver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/travel_history"
            android:textColor="#005F40"
            android:layout_marginTop="20dp"
            android:textSize="40sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/table_history_driver"
            app:layout_constraintTop_toTopOf="parent" />

        <TableLayout
            android:id="@+id/table_history_driver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="286dp"
            app:layout_constraintBottom_toTopOf="@id/nav_menu_driver"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_location_driver">

            <TableRow
                android:background="@color/dark_green">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textColor="@color/white"
                    android:padding="10sp"
                    android:textSize="14sp"
                    android:layout_weight="2"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Age"
                    android:textColor="@color/white"
                    android:padding="10sp"
                    android:textSize="14sp"
                    android:layout_weight="2"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:textColor="@color/white"
                    android:padding="10sp"
                    android:textSize="14sp"
                    android:layout_weight="2"
                    />
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Sid"
                    android:padding="10sp"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="22"
                    android:padding="10sp"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:padding="10sp"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    />
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Lil"
                    android:padding="10sp"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="23"
                    android:padding="10sp"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:padding="10sp"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    />

            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Nard"
                    android:padding="10sp"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="22"
                    android:padding="10sp"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:padding="10sp"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    />
            </TableRow>
        </TableLayout>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/nav_menu_driver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="?android:attr/windowBackground"
            app:backgroundTint="#FFFFFF"
            app:itemIconTint="@color/navigation_selector"
            app:itemTextColor="@color/dark_green"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:menu="@menu/menu_navigation_driverr" />

    </androidx.constraintlayout.widget.ConstraintLayout>




</ScrollView>