<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TravelHistory"
    android:orientation="vertical">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="?android:attr/windowBackground"
        app:backgroundTint="#FFFFFF"
        app:itemIconTint="@color/navigation_selector"
        app:itemTextColor="@color/dark_green"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/menu_navigation_driverr" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/travelviewer">


        <TextView
            android:id="@+id/text_location_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/travel_history"
            android:textColor="#005F40"
            android:layout_marginTop="20dp"
            android:textSize="40sp"
            android:textStyle="bold"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Destination"
                android:textSize="25sp"
                android:padding="5dp"
                android:layout_weight="3"
                android:textColor="#FFF"
                android:background="@color/dark_green"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Time"
                android:textSize="25sp"
                android:padding="5dp"
                android:layout_weight="4"
                android:textColor="#FFF"
                android:background="@color/dark_green"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textSize="25sp"
                android:padding="5dp"
                android:layout_weight="4"
                android:textColor="#FFF"
                android:background="@color/dark_green"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include
                layout="@layout/list_format">
            </include>
        </LinearLayout>

    </LinearLayout>



    <ProgressBar
        android:id="@+id/pbar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="250dp"
        android:indeterminate="true"
        android:layout_gravity="center"
        android:indeterminateDrawable="@drawable/circle"
        android:visibility="gone"/>



</LinearLayout>