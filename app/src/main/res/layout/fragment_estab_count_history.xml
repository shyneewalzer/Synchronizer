<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FragmentEstabCountHistory">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/travelviewer"
        android:paddingTop="10dp"
        android:paddingHorizontal="10dp">


        <TextView
            android:id="@+id/text_location_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scanned Count Reports"
            android:textColor="@color/gray"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="10dp">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:theme="@style/Theme.MobileApplicationProject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Start Date"
                android:textColor="@color/black"
                app:boxStrokeColor="@color/black"
                app:hintTextColor="@color/black"
                app:startIconDrawable="@drawable/ic_search"
                android:layout_weight="4">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_start"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="textPersonName"
                    android:padding="4dp"
                    android:textSize="15sp"
                    android:focusableInTouchMode="false">
                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:theme="@style/Theme.MobileApplicationProject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="End Date"
                android:textColor="@color/black"
                app:boxStrokeColor="@color/black"
                app:hintTextColor="@color/black"
                app:startIconDrawable="@drawable/ic_search"
                android:layout_weight="4">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_end"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="textPersonName"
                    android:padding="4dp"
                    android:textSize="15sp"
                    android:focusableInTouchMode="false">
                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btn_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SEARCH"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:background="@drawable/main_button"
            android:textColor="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Employee Name"
                android:textSize="18sp"
                android:padding="5dp"
                android:layout_weight="1"
                android:textColor="#FFF"
                android:background="@color/light_green"/>
<!--            <TextView-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="Time"-->
<!--                android:textSize="18sp"-->
<!--                android:padding="5dp"-->
<!--                android:layout_weight="4"-->
<!--                android:textColor="#FFF"-->
<!--                android:background="@color/light_green"/>-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Count"
                android:textSize="18sp"
                android:padding="5dp"
                android:layout_weight="3"
                android:textColor="#FFF"
                android:background="@color/light_green"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lo_countviewer"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <include
                layout="@layout/list_format">
            </include>
        </LinearLayout>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/pbar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginTop="250dp"
        android:indeterminate="true"
        android:indeterminateDrawable="@drawable/circle"
        android:visibility="gone"/>

</LinearLayout>