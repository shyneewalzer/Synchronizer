<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:theme="@style/NavigationDrawerStyle"
    android:id="@+id/drawer"
    tools:context=".SetLocation">


    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/lo_refresher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/toolbar_main" />

            <LinearLayout
                android:id="@+id/locationviewer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                    <TextView
                        android:id="@+id/tv_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Set Destination"
                        android:textColor="@color/gray"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="40dp"
                        android:textSize="25sp" />
                <LinearLayout
                    android:id="@+id/lo_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="gone">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/location_user"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:theme="@style/Theme.MobileApplicationProject"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:hint="Set Location"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:textColor="@color/black"
                        app:boxStrokeColor="@color/black"
                        app:hintTextColor="@color/black"
                        app:startIconDrawable="@drawable/location_icon">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_destination"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:inputType="textPersonName"
                            android:padding="10dp"
                            android:textSize="20sp">
                        </com.google.android.material.textfield.TextInputEditText>
                    </com.google.android.material.textfield.TextInputLayout>

                    <Button
                        android:id="@+id/btn_destination"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SET"
                        android:textSize="25sp"
                        android:background="@drawable/main_button"
                        android:textColor="@color/white"
                        android:paddingVertical="10dp"
                        android:paddingHorizontal="20dp"
                        android:layout_margin="20dp"
                        android:layout_gravity="center"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lo_companion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

<!--                    <TextView-->
<!--                        android:id="@+id/txt_companionExpander"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:text="ADD COMPANIONS: "-->
<!--                        android:textSize="20sp"-->
<!--                        android:textColor="@color/gray"-->
<!--                        android:textStyle="bold"-->
<!--                        android:layout_marginHorizontal="10dp"-->
<!--                        android:layout_marginVertical="10dp"-->
<!--                        android:drawableLeft="@drawable/ic_plus"-->
<!--                        android:padding="10dp"/>-->

                <LinearLayout
                    android:id="@+id/lo_companionlist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="10dp"
                    android:background="@color/white"
                    android:layout_marginTop="15dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:background="@color/light_green"
                            android:padding="10sp"
                            android:text="ADDITIONAL COMPANION"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    <ListView
                        android:id="@+id/listview"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:choiceMode="multipleChoice"
                        android:nestedScrollingEnabled="true"/>
                </LinearLayout>

                //////////////////////////////////////////////////////////////
                <LinearLayout
                    android:id="@+id/lo_addcompanion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:visibility="gone">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:hint="First Name"
                        app:startIconDrawable="@drawable/profile_icon"
                        app:hintTextColor="@color/black"
                        android:textColor="@color/black"
                        app:boxStrokeColor="@color/black"
                        android:theme="@style/Theme.MobileApplicationProject"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_cFname"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:inputType="textEmailAddress"
                            android:padding="5dp"
                            android:textSize="15sp">
                        </com.google.android.material.textfield.TextInputEditText>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:hint="Middle Name"
                        app:startIconDrawable="@drawable/profile_icon"
                        app:hintTextColor="@color/black"
                        android:textColor="@color/black"
                        app:boxStrokeColor="@color/black"
                        android:theme="@style/Theme.MobileApplicationProject"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_cMname"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:inputType="textEmailAddress"
                            android:textSize="15sp">
                        </com.google.android.material.textfield.TextInputEditText>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:hint="Last Name"
                        app:startIconDrawable="@drawable/profile_icon"
                        app:hintTextColor="@color/black"
                        android:textColor="@color/black"
                        app:boxStrokeColor="@color/black"
                        android:theme="@style/Theme.MobileApplicationProject"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_cLname"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:inputType="textEmailAddress"
                            android:padding="5dp"
                            android:textSize="15sp">
                        </com.google.android.material.textfield.TextInputEditText>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Contact Number"
                        app:startIconDrawable="@drawable/contact_icon"
                        app:hintTextColor="@color/black"
                        android:textColor="@color/black"
                        app:boxStrokeColor="@color/black"
                        android:theme="@style/Theme.MobileApplicationProject"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_cContact"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:inputType="textEmailAddress"
                            android:padding="5dp"
                            android:textSize="15sp">
                        </com.google.android.material.textfield.TextInputEditText>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:hint="Address"
                        app:startIconDrawable="@drawable/location_icon"
                        app:hintTextColor="@color/black"
                        android:textColor="@color/black"
                        app:boxStrokeColor="@color/black"
                        android:theme="@style/Theme.MobileApplicationProject"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_cAdr"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:inputType="textEmailAddress"
                            android:padding="5dp"
                            android:textSize="15sp">
                        </com.google.android.material.textfield.TextInputEditText>
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

/////////////////////////////////////////////////////////////////

                <Button
                    android:id="@+id/btn_addCompanion"
                    android:layout_width="150dp"
                    android:layout_height="55dp"
                    android:background="@drawable/main_button"
                    android:text="ADD"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    app:backgroundTint="@color/light_green"
                    android:layout_gravity="center"/>

                <Button
                    android:id="@+id/btn_scanner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:background="@drawable/main_button"
                    android:text="SCAN"
                    android:textColor="#fff"
                    android:textSize="25sp"
                    app:backgroundTint="@color/dark_green"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="50dp"
                    android:layout_margin="10dp"
                    android:layout_gravity="center"/>

            </LinearLayout>
            </LinearLayout>



//////////////////////////////////////

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ProgressBar
                    android:id="@+id/pbar"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="250dp"
                    android:indeterminate="true"
                    android:layout_gravity="center"
                    android:indeterminateDrawable="@drawable/circle"
                    android:visibility="gone"/>
            </LinearLayout>

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:headerLayout="@layout/drawer_header"
        app:menu="@menu/drawer_menu"
        android:layout_gravity="start">

    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>