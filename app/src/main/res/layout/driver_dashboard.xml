<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:theme="@style/NavigationDrawerStyle"
    android:id="@+id/drawer">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DriverDashboard">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/toolbar_main" />

            <LinearLayout
                android:id="@+id/dashboard_viewer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="20dp"
                android:paddingHorizontal="10dp">

<!--                <TextView-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="Vehicle Details"-->
<!--                    android:textSize="20sp"-->
<!--                    android:textColor="@color/gray"-->
<!--                    android:layout_gravity="center_horizontal"/>-->

                <TextView
                    android:id="@+id/txt_addvehicle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Vehicle"
                    android:textSize="20sp"
                    android:textColor="@color/light_green"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:drawableLeft="@drawable/ic_vehicle"
                    android:gravity="center"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Plate number: "
                            android:textSize="18sp"
                            android:textColor="@color/gray"
                            android:layout_weight="1"/>

                        <Spinner
                            android:id="@+id/spr_platenum"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Route: "
                            android:textSize="18sp"
                            android:textColor="@color/gray"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/txt_route"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Route"
                            android:textSize="18sp"
                            android:textColor="@color/gray"
                            android:layout_weight="1"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Body Number: "
                            android:textSize="18sp"
                            android:textColor="@color/gray"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/txt_bodynum"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Body"
                            android:textSize="18sp"
                            android:textColor="@color/gray"
                            android:layout_weight="1"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Color: "
                            android:textSize="18sp"
                            android:textColor="@color/gray"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/txt_color"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Color"
                            android:textSize="18sp"
                            android:textColor="@color/gray"
                            android:layout_weight="1"/>

                    </LinearLayout>


                </LinearLayout>

                <Button
                    android:id="@+id/btn_driver_scan"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:text="SCAN"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:background="@drawable/main_button"
                    android:textSize="15sp"
                    android:layout_marginTop="20dp"/>

            </LinearLayout>

            <ProgressBar
                android:id="@+id/pbar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginTop="250dp"
                android:indeterminate="true"
                android:indeterminateDrawable="@drawable/circle"
                android:visibility="gone"/>
        </LinearLayout>



    </ScrollView>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:headerLayout="@layout/drawer_header"
        app:menu="@menu/drawer_driver_menu"
        android:layout_gravity="start">

    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>
