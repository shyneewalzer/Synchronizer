<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:theme="@style/NavigationDrawerStyle"
    android:id="@+id/drawer"
    tools:context=".SetLocationGroup">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/toolbar_main" />

            <LinearLayout
                android:id="@+id/locationviewer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                    <TextView
                        android:id="@+id/txt_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Title Here"
                        android:textColor="#005F40"
                        android:layout_marginTop="20dp"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@id/layholder"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>



                    <RelativeLayout
                        android:id="@+id/layholder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txt_location"
                        app:layout_constraintBottom_toTopOf="@id/table_location_user">

                        <ImageView
                            android:id="@+id/scanbox"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_marginTop="20dp"/>

                        <TextView
                            android:id="@+id/txtsign"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="QR Code Here"
                            android:textSize="25dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:layout_alignTop="@id/scanbox"
                            android:layout_alignBottom="@id/scanbox"
                            android:layout_alignLeft="@id/scanbox"
                            android:layout_alignRight="@id/scanbox"/>

                    </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Addtional User"
                        android:textColor="@color/white"
                        android:padding="10sp"
                        android:textSize="14sp"
                        android:layout_weight="4"
                        android:background="@color/dark_green"/>
                    <ListView
                        android:id="@+id/listview"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:choiceMode="multipleChoice"
                        android:nestedScrollingEnabled="true"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="10dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:hint="First Name"
                        app:startIconDrawable="@drawable/profile_icon"
                        app:hintTextColor="@color/black"
                        android:textColor="@color/black"
                        app:boxStrokeColor="@color/black"
                        android:theme="@style/Theme.MobileApplicationProject"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_cFname"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:inputType="textEmailAddress"
                            android:padding="5dp"
                            android:textSize="15sp">
                        </com.google.android.material.textfield.TextInputEditText>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:hint="Middle Name"
                        app:startIconDrawable="@drawable/profile_icon"
                        app:hintTextColor="@color/black"
                        android:textColor="@color/black"
                        app:boxStrokeColor="@color/black"
                        android:theme="@style/Theme.MobileApplicationProject"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_cMname"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:inputType="textEmailAddress"
                            android:textSize="15sp">
                        </com.google.android.material.textfield.TextInputEditText>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:hint="Last Name"
                        app:startIconDrawable="@drawable/profile_icon"
                        app:hintTextColor="@color/black"
                        android:textColor="@color/black"
                        app:boxStrokeColor="@color/black"
                        android:theme="@style/Theme.MobileApplicationProject"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_cLname"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:inputType="textEmailAddress"
                            android:padding="5dp"
                            android:textSize="15sp">
                        </com.google.android.material.textfield.TextInputEditText>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Contact Number"
                        app:startIconDrawable="@drawable/contact_icon"
                        app:hintTextColor="@color/black"
                        android:textColor="@color/black"
                        app:boxStrokeColor="@color/black"
                        android:theme="@style/Theme.MobileApplicationProject"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_cContact"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:inputType="textEmailAddress"
                            android:padding="5dp"
                            android:textSize="15sp">
                        </com.google.android.material.textfield.TextInputEditText>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:hint="Address"
                        app:startIconDrawable="@drawable/location_icon"
                        app:hintTextColor="@color/black"
                        android:textColor="@color/black"
                        app:boxStrokeColor="@color/black"
                        android:theme="@style/Theme.MobileApplicationProject"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_cAdr"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:inputType="textEmailAddress"
                            android:padding="5dp"
                            android:textSize="15sp">
                        </com.google.android.material.textfield.TextInputEditText>
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/btn_eAddCompanion"
                    android:layout_width="150dp"
                    android:layout_height="55dp"
                    android:background="@drawable/main_button"
                    android:text="Add"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    app:backgroundTint="@color/dark_green" />


                <Button
                    android:id="@+id/btn_setQR"
                    android:layout_width="240dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:textAllCaps="false"
                    android:background="@drawable/main_button"
                    android:text="Set"
                    android:textColor="#fff"
                    android:textSize="30sp"
                    app:backgroundTint="@color/dark_green"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ProgressBar
                    android:id="@+id/pbar"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="250dp"
                    android:indeterminate="true"
                    android:layout_gravity="center"
                    android:indeterminateDrawable="@drawable/circle"
                    android:visibility="gone"/>
            </LinearLayout>

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:headerLayout="@layout/drawer_header"
        app:menu="@menu/drawer_menu"
        android:layout_gravity="start">

    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>