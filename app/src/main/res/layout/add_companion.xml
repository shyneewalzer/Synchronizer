<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:theme="@style/NavigationDrawerStyle"
    android:id="@+id/drawer"
    tools:context=".AddCompanion">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/toolbar_main" />

            <LinearLayout
                android:id="@+id/locationviewer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

///////////////////////////////////////////////////////

                    <TextView
                        android:id="@+id/txt_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add Companion"
                        android:textColor="@color/gray"
                        android:layout_marginTop="20dp"
                        android:textSize="20sp"/>

////////////////////////////////////////////////////////

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <ImageView
                        android:id="@+id/scanbox"
                        android:layout_width="150dp"
                        android:layout_height="150dp"/>

                </LinearLayout>


/////////////////////////////////////////////////////

                <TextView
                    android:id="@+id/txt_companionExpander"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ADD COMPANIONS: "
                    android:textSize="15sp"
                    android:textColor="@color/gray"
                    android:textStyle="bold"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="10dp"
                    android:drawableLeft="@drawable/ic_plus"
                    android:padding="10dp"
                    android:layout_gravity="start"
                    android:background="@drawable/border"/>

                <LinearLayout
                    android:id="@+id/lo_companionlist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="10dp"
                    android:background="@color/white"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Addtional User"
                        android:textColor="@color/white"
                        android:padding="10sp"
                        android:textSize="15sp"
                        android:layout_weight="4"
                        android:background="@color/light_green"/>
                    <ListView
                        android:id="@+id/listview"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:choiceMode="multipleChoice"
                        android:nestedScrollingEnabled="true"/>

                    <Button
                        android:id="@+id/btn_scan"
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:textAllCaps="false"
                        android:background="@drawable/main_button"
                        android:text="SCAN"
                        android:textColor="#fff"
                        android:textSize="15sp"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>

//////////////////////////////////////////////////////////////
                <LinearLayout
                    android:id="@+id/lo_addcompanion"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:visibility="gone">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:hint="First Name"
                        app:startIconDrawable="@drawable/profile_icon"
                        app:hintTextColor="@color/black"
                        android:textColor="@color/black"
                        app:boxStrokeColor="@color/black"
                        android:theme="@style/Theme.MobileApplicationProject"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_cFname"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:inputType="textEmailAddress"
                            android:padding="5dp"
                            android:textSize="15sp">
                        </com.google.android.material.textfield.TextInputEditText>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:hint="Last Name"
                        app:startIconDrawable="@drawable/profile_icon"
                        app:hintTextColor="@color/black"
                        android:textColor="@color/black"
                        app:boxStrokeColor="@color/black"
                        android:theme="@style/Theme.MobileApplicationProject"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_cLname"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:inputType="textEmailAddress"
                            android:padding="5dp"
                            android:textSize="15sp">
                        </com.google.android.material.textfield.TextInputEditText>
                    </com.google.android.material.textfield.TextInputLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center_horizontal">

                        <Button
                            android:id="@+id/btn_eAddCompanion"
                            android:layout_width="120dp"
                            android:layout_height="50dp"
                            android:background="@drawable/main_button"
                            android:text="ADD"
                            android:textAllCaps="false"
                            android:textColor="#fff"
                            android:textSize="15sp"
                            android:layout_marginTop="20dp"
                            android:layout_marginHorizontal="20dp"/>

                        <Button
                            android:id="@+id/btn_eAddCompanionCancel"
                            android:layout_width="120dp"
                            android:layout_height="50dp"
                            android:background="@drawable/main_button"
                            android:text="CANCEL"
                            android:textAllCaps="false"
                            android:textColor="#fff"
                            android:textSize="15sp"
                            android:layout_marginTop="20dp"
                            android:layout_marginHorizontal="20dp"/>

                    </LinearLayout>
                </LinearLayout>

/////////////////////////////////////////////////////////////


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ProgressBar
                    android:id="@+id/pbar"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="250dp"
                    android:indeterminate="true"
                    android:layout_gravity="center"
                    android:indeterminateDrawable="@drawable/circle"
                    android:visibility="gone"/>
            </LinearLayout>

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:headerLayout="@layout/drawer_header"
        app:menu="@menu/drawer_menu"
        android:layout_gravity="start">

    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>